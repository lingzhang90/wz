<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/titlebar_new" />

    <include
        android:id="@+id/mine_nologin"
        layout="@layout/tab_mine_nologin" />

    <ScrollView
        android:id="@+id/mine_logined"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/info_panel_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="146.5dp"
                android:background="@drawable/person_bgimage" >

                <ImageView
                    android:id="@+id/mine_personImage"
                    android:layout_width="81dp"
                    android:layout_height="81dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/person_userimage" />

                <LinearLayout
                    android:id="@+id/mine_personInfo_liner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12.5dp"
                    android:layout_toRightOf="@+id/mine_personImage"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/mine_person_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="9dp"
                        android:text="微赚粉丝"
                        android:textColor="#ffffff"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/mine_person_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID:98950805"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/mine_btn_setting"
                    android:layout_width="90dp"
                    android:layout_height="28dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/person_uesrinfosetting" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="8dp" >

                <RelativeLayout
                    android:id="@+id/mine_person_pointall"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_more_item_default"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/mine_point_all"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:gravity="center_horizontal"
                        android:text="74"
                        android:textColor="#d40003"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="14dp"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/mine_person_allpoint"
                            android:layout_width="22.5dp"
                            android:layout_height="22.5dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/person_allpoints" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="总积分"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mine_person_pointused"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_more_item_default"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/mine_point_use"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textColor="#d40003"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="14dp"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/mine_person_usepoint"
                            android:layout_width="22.5dp"
                            android:layout_height="22.5dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/person_beingexchangedpoints" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:singleLine="true"
                            android:text="已兑积分"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mine_person_pointunused"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_more_item_default"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/mine_point_unuse"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:gravity="center_horizontal"
                        android:text="74"
                        android:textColor="#d40003"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="14dp"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/mine_person_unusepoint"
                            android:layout_width="22.5dp"
                            android:layout_height="22.5dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/person_pointsinmyhand" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:singleLine="true"
                            android:text="未兑积分"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:background="@drawable/ic_more_item_default"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/mine_pointinfo"
                    android:layout_width="fill_parent"
                    android:layout_height="58dp"
                    android:layout_gravity="center" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/person_pointsrecord" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12.5dp"
                        android:gravity="center"
                        android:text="积分明细"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mine_person_pointinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="0"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d6d6d6" />

                <LinearLayout
                    android:id="@+id/mine_pointrecord"
                    android:layout_width="fill_parent"
                    android:layout_height="58dp"
                    android:layout_gravity="center" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/person_pointsexchangerecord" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12.5dp"
                        android:gravity="center"
                        android:text="兑换记录"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mine_person_pointrecord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="0"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d6d6d6" />

                <LinearLayout
                    android:id="@+id/mine_pointexplain"
                    android:layout_width="fill_parent"
                    android:layout_height="58dp"
                    android:layout_gravity="center" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/person_guysiinvited" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12.5dp"
                        android:gravity="center"
                        android:text="推广说明"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mine_person_pointexplain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_arrow" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/mine_btn_changeNumber"
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/person_btn_bg"
                android:text="更换账号"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>