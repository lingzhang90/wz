<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/info_panel_bg"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/fragment_home"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        class="com.lixunkj.weizhuan.fragment.HomeFragment" />

    <fragment
        android:id="@+id/fragment_settings"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        class="com.lixunkj.weizhuan.fragment.SettingsFragment" />

    <fragment
        android:id="@+id/fragment_zhuan"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        class="com.lixunkj.weizhuan.fragment.ZhuanFragment" />

    <fragment
        android:id="@+id/fragment_search"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        class="com.lixunkj.weizhuan.fragment.MineFragment" />

    <fragment
        android:id="@+id/fragment_more"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        class="com.lixunkj.weizhuan.fragment.MoreFragment" />

    <RadioGroup
        android:id="@+id/main_tab"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio_btnHome"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_background"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/tab_bg_home"
            android:focusable="true"
            android:text="" />

        <RadioButton
            android:id="@+id/radio_btnSetting"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_background"
            android:button="@null"
            android:drawableTop="@drawable/tab_bg_setting"
            android:focusable="true"
            android:text="" />

        <RadioButton
            android:id="@+id/radio_btnZhuan"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_background"
            android:button="@null"
            android:drawableTop="@drawable/tab_bg_zhuan"
            android:focusable="true"
            android:text="" />

        <RadioButton
            android:id="@+id/radio_btnMine"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_background"
            android:button="@null"
            android:drawableTop="@drawable/tab_bg_mine"
            android:focusable="true"
            android:text="" />

        <RadioButton
            android:id="@+id/radio_btnMore"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_background"
            android:button="@null"
            android:drawableTop="@drawable/tab_bg_more"
            android:focusable="true"
            android:text="" />
    </RadioGroup>

</LinearLayout>