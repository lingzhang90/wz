<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/form_LinearLayout_mobile"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:paddingBottom="10.0dip" >

    <!-- 第二个白框begin -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/shape_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/setting_update"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="@drawable/setting"
            android:clickable="false"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:paddingLeft="15.0dip"
                android:text="手机"
                android:textColor="@drawable/setting_txt"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/form_editText_mobileNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@null"
                android:ems="10"
                android:hint="请输入手机号"
                android:inputType="number" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@drawable/shape_line" />

        <LinearLayout
            android:id="@+id/setting_logout"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="@drawable/setting"
            android:clickable="false"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/form_editText_phoneAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:paddingLeft="15.0dip"
                android:text="话费"
                android:textColor="@drawable/setting_txt"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/form_spinner_mobileAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/form_spinner_selector"
                android:gravity="top" />

        </LinearLayout>
    </LinearLayout>
    <!-- 第二个白框end -->

</LinearLayout>