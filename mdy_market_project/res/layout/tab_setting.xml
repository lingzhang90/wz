                    android:src="@drawable/pointschange_phone" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:duplicateParentState="true"
                    android:paddingLeft="10dp"
                    android:text="话费充值"
                    android:textColor="@drawable/setting_txt"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="12.0dip"
                    android:layout_height="12.0dip"
                    android:src="@drawable/into_icon" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@drawable/shape_line" />

            <LinearLayout
                android:id="@+id/setting_problem"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="@drawable/setting"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/ImageView03"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/pointschange_alipay" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:duplicateParentState="true"
                    android:paddingLeft="10dp"
                    android:text="支付宝充值"
                    android:textColor="@drawable/setting_txt"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="12.0dip"
                    android:layout_height="12.0dip"
                    android:src="@drawable/into_icon" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@drawable/shape_line" />

            <LinearLayout
                android:id="@+id/setting_about"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="@drawable/setting"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/ImageView04"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/pointschange_qqpay" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:duplicateParentState="true"
                    android:paddingLeft="10dp"
                    android:text="财付通充值"
                    android:textColor="@drawable/setting_txt"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="12.0dip"
                    android:layout_height="12.0dip"
                    android:src="@drawable/into_icon" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
   </ScrollView> 

</LinearLayout>

